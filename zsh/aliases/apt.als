### apt.als ###

alias aptupd='sudo apt update'
alias aptupg='sudo apt upgrade'
alias aptins='sudo apt install'
alias aptrem='sudo apt remove'
alias aptaure='sudo apt autoremove'
alias aptfix='sudo apt --fix-broken install'
alias aptunlock='[ -f /var/cache/apt/archives/lock ] && sudo rm /var/cache/apt/archives/lock'
alias aptshow='apt show' # Just because I don't want to type space
